<Window x:Class="ScorecardUpdaterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scorecard Updater" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <Button Name="UpdateButton" Content="Update Scorecard" Width="200" Height="40" Margin="0,0,0,10" Click="UpdateButton_Click"/>
            <TextBox Name="LogTextBox" Height="280" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
